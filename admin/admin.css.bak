/* ===== Admin Portal Styles ===== */
/* Extends staff.css with admin-specific styles */

@import url('../staff/staff.css');

/* ===== Dashboard Stats Grid ===== */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    margin-bottom: 25px;
}

.stat-card {
    background: white;
    padding: 15px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    gap: 15px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.stat-icon {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24px;
}

.stat-info {
    flex: 1;
}

.stat-label {
    font-size: 12px;
    color: var(--text-light);
    margin-bottom: 5px;
}

.stat-value {
    font-size: 18px;
    font-weight: 700;
    color: var(--text-dark);
}

/* ===== Section Cards ===== */
.section-card {
    background: white;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.section-card h3 {
    font-size: 16px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--secondary-color);
}

/* ===== Top Products List ===== */
.top-products-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.top-product-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background: var(--bg-light);
    border-radius: 8px;
}

.top-product-info h4 {
    font-size: 14px;
    margin-bottom: 3px;
}

.top-product-stats {
    font-size: 12px;
    color: var(--text-light);
}

.top-product-revenue {
    font-weight: 700;
    color: var(--primary-color);
    font-size: 14px;
}

/* ===== Recent Sales List ===== */
.recent-sales-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.recent-sale-item {
    display: flex;
    justify-content: space-between;
    padding: 10px;
    background: var(--bg-light);
    border-radius: 8px;
    font-size: 13px;
}

.recent-sale-info {
    flex: 1;
}

.recent-sale-number {
    font-weight: 600;
    margin-bottom: 3px;
}

.recent-sale-details {
    color: var(--text-light);
    font-size: 12px;
}

.recent-sale-amount {
    font-weight: 700;
    color: var(--primary-color);
}

/* ===== Products List ===== */
.products-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.product-list-item {
    background: white;
    padding: 15px;
    border-radius: 12px;
    display: flex;
    gap: 12px;
    align-items: center;
}

.product-list-img {
    width: 70px;
    height: 70px;
    border-radius: 8px;
    object-fit: cover;
    background: var(--bg-light);
}

.product-list-info {
    flex: 1;
}

.product-list-title {
    font-weight: 600;
    margin-bottom: 5px;
    font-size: 14px;
}

.product-list-meta {
    font-size: 12px;
    color: var(--text-light);
    margin-bottom: 5px;
}

.product-list-price {
    color: var(--primary-color);
    font-weight: 700;
    font-size: 15px;
}

.product-list-actions {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.action-btn {
    padding: 6px 12px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    transition: all 0.3s;
}

.action-btn-edit {
    background: #007BFF;
    color: white;
}

.action-btn-stock {
    background: var(--primary-color);
    color: white;
}

.action-btn-delete {
    background: var(--danger-color);
    color: white;
}

/* ===== Filter Section ===== */
.filter-section {
    display: flex;
    gap: 10px;
    margin-bottom: 15px;
}

.filter-select,
.filter-input {
    flex: 1;
    padding: 10px;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    font-size: 14px;
}

/* ===== Sales List ===== */
.sales-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.sale-list-item {
    background: white;
    padding: 15px;
    border-radius: 12px;
    border-left: 4px solid var(--primary-color);
}

.sale-list-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
}

.sale-list-number {
    font-weight: 700;
    font-size: 14px;
}

.sale-list-amount {
    color: var(--primary-color);
    font-weight: 700;
    font-size: 16px;
}

.sale-list-details {
    font-size: 12px;
    color: var(--text-light);
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 5px;
}

.sale-type-badge {
    display: inline-block;
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    margin-top: 5px;
}

.sale-type-online {
    background: #E3F2FD;
    color: #1976D2;
}

.sale-type-instore {
    background: #FFF3E0;
    color: #F57C00;
}

/* ===== Inventory List ===== */
.inventory-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.inventory-item {
    background: white;
    padding: 15px;
    border-radius: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s;
}

.inventory-item:hover {
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
}

.inventory-info h4 {
    font-size: 14px;
    margin-bottom: 3px;
}

.inventory-meta {
    font-size: 12px;
    color: var(--text-light);
}

.inventory-stock {
    font-size: 24px;
    font-weight: 700;
}

.inventory-stock.high {
    color: var(--success-color);
}

.inventory-stock.medium {
    color: var(--warning-color);
}

.inventory-stock.low {
    color: var(--danger-color);
}

/* ===== Modal ===== */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    padding: 20px;
    overflow-y: auto;
}

.modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-content {
    background: white;
    border-radius: 12px;
    width: 100%;
    max-width: 500px;
    max-height: 90vh;
    overflow-y: auto;
}

.modal-header {
    padding: 20px;
    border-bottom: 2px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal-header h3 {
    font-size: 18px;
    color: var(--secondary-color);
}

.modal-close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: var(--text-light);
}

.modal-body {
    padding: 20px;
}

.modal-body .form-group {
    margin-bottom: 15px;
}

.modal-body label {
    display: block;
    margin-bottom: 5px;
    font-weight: 600;
    font-size: 13px;
}

.modal-body input[type="text"],
.modal-body input[type="number"],
.modal-body input[type="url"],
.modal-body textarea,
.modal-body select {
    width: 100%;
    padding: 10px;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    font-size: 14px;
}

.modal-body textarea {
    resize: vertical;
    font-family: inherit;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
}

.checkbox-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 400;
    cursor: pointer;
}

.checkbox-label input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
}

.modal-actions {
    display: flex;
    gap: 10px;
    margin-top: 20px;
}

.modal-actions .btn {
    flex: 1;
}

/* ===== Stock Info ===== */
.stock-info {
    background: var(--bg-light);
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
}

.stock-info-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
    font-size: 14px;
}

.stock-info-label {
    color: var(--text-light);
}

.stock-info-value {
    font-weight: 600;
}

/* ===== Responsive ===== */
@media (max-width: 480px) {
    .stats-grid {
        grid-template-columns: 1fr;
    }

    .stat-card {
        padding: 12px;
    }

    .stat-icon {
        width: 45px;
        height: 45px;
        font-size: 20px;
    }

    .form-row {
        grid-template-columns: 1fr;
    }
}

/* ===== Empty State ===== */
.empty-state {
    text-align: center;
    padding: 40px 20px;
    color: var(--text-light);
}

.empty-state i {
    font-size: 48px;
    opacity: 0.3;
    margin-bottom: 15px;
}

.empty-state p {
    font-size: 14px;
}

/* ===== Toggle Switch ===== */
.switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 24px;
}

.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: .4s;
}

.slider:before {
    position: absolute;
    content: "";
    height: 16px;
    width: 16px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: .4s;
}

input:checked+.slider {
    background-color: var(--primary-color);
}

input:checked+.slider:before {
    transform: translateX(26px);
}

.slider.round {
    border-radius: 24px;
}

.slider.round:before {
    border-radius: 50%;
}

.global-toggle {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    font-weight: 600;
}
